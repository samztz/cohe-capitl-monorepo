generator client {
  provider      = "prisma-client-js"
  output        = "../generated/prisma"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
  engineType    = "binary"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PolicyStatus {
  PENDING_UNDERWRITING
  APPROVED_AWAITING_PAYMENT
  ACTIVE
  REJECTED
  EXPIRED_UNPAID
  EXPIRED
}

model User {
  id            String    @id @default(uuid())
  walletAddress String    @unique
  nonce         String?
  email         String?
  roles         String[]  @default([])
  status        String    @default("active")
  createdAt     DateTime  @default(now())
  lastLoginAt   DateTime?
  updatedAt     DateTime  @updatedAt
  policies      Policy[]
}

model Sku {
  id           String   @id @default(uuid())
  name         String
  chainId      Int
  tokenAddress String
  tokenSymbol  String   // Token symbol (e.g., "USDT", "USDC", "BNB")
  termDays     Int      @default(90)
  premiumAmt   Decimal  @db.Decimal(38, 18)
  coverageAmt  Decimal  @db.Decimal(38, 18)
  termsUrl     String
  status       String   @default("active")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  policies     Policy[]

  @@index([status])
  @@index([chainId])
}

model Policy {
  id                       String        @id @default(uuid())
  userId                   String
  user                     User          @relation(fields: [userId], references: [id])
  skuId                    String
  sku                      Sku           @relation(fields: [skuId], references: [id])
  walletAddress            String
  premiumAmt               Decimal       @db.Decimal(38, 18)  // User-input premium amount
  coverageAmt              Decimal       @db.Decimal(38, 18)  // User-input coverage amount
  status                   PolicyStatus  @default(PENDING_UNDERWRITING)
  contractHash             String?
  userSig                  String?

  // Handwritten signature fields
  signatureImageUrl        String?       // Signature image URL (or relative path)
  signatureHash            String?       // SHA256 hash of signature image
  signatureSignedAt        DateTime?     // When signature was created
  signatureIp              String?       // IP address when signature was created
  signatureUserAgent       String?       // User agent when signature was created
  signatureWalletAddress   String?       // Wallet address at time of signature

  paymentDeadline          DateTime?     // Deadline for payment after approval (set when APPROVED_AWAITING_PAYMENT)
  reviewerNote             String?       // Admin note when approving/rejecting policy
  startAt                  DateTime?     // Coverage start time (set when ACTIVE)
  endAt                    DateTime?     // Coverage end time (startAt + termDays)
  createdAt                DateTime      @default(now())
  updatedAt                DateTime      @updatedAt
  payments                 Payment[]

  @@index([userId])
  @@index([status])
  @@index([walletAddress, skuId])  // Index for efficient queries, but not unique
}

model Payment {
  id           String   @id @default(uuid())
  policyId     String
  policy       Policy   @relation(fields: [policyId], references: [id])
  txHash       String   @unique
  chainId      Int
  tokenAddress String
  fromAddress  String
  toAddress    String
  amount       Decimal  @db.Decimal(38, 18)
  confirmed    Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([policyId])
  @@index([txHash])
  @@index([confirmed])
}

model Setting {
  id        String   @id @default(uuid())
  key       String   @unique
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([key])
}