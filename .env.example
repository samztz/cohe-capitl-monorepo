# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/cohe_capital_dev

# PostgreSQL Docker Configuration (for docker-compose)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=cohe_capital_dev

# JWT Configuration
# Generate a secure random secret: openssl rand -base64 32
JWT_SECRET=your-secret-key-change-this-in-production
JWT_EXPIRES_IN=7d

# SIWE (Sign-In with Ethereum) Configuration
# Domain for SIWE message (must match client's domain)
SIWE_DOMAIN=localhost:3001
# URI for SIWE message (must match client's origin)
SIWE_URI=http://localhost:3001
# Allowed chain IDs (comma-separated): BSC mainnet (56) and testnet (97)
SIWE_ALLOWED_CHAIN_IDS=56,97

# API Server Configuration
PORT=3001
HOST=0.0.0.0
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN=*

# Logging
LOG_LEVEL=info
